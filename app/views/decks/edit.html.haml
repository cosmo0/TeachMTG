- provide(:title, 'Edit deck: ' + @deck.title)

%h1
  Edit deck:
  = @deck.title

.span6
  = form_for @deck, html: { class: "form-horizontal" } do |f|
    = render 'shared/error_messages'

    .control-group
      = f.label :title, class: "control-label"
      .controls
        = f.text_field :title

    .control-group
      = f.label :slug, class: "control-label"
      .controls
        = f.text_field :slug, class: "input-small"

    .control-group
      = f.label :category, class: "control-label"
      .controls
        = f.text_field :category, class: "input-mini"

    .control-group
      .controls
        = f.submit "Edit", class: "btn btn-primary"
        = link_to "Cancel", deck_path(@deck), class: "btn btn-link"